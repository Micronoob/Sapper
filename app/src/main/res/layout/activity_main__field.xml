<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sapper.Main_Field"
    android:background="#333">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Reset"
        android:id="@+id/bRandom"
        android:background="#a10c0c"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/Table"
        android:layout_below="@+id/bRandom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </TableLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivSetFlag"
        android:src="@drawable/unflag"
        android:layout_above="@+id/Table"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:contentDescription="@string/setFlag" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivSmile"
        android:adjustViewBounds="false"
        android:layout_above="@+id/Table"
        android:layout_centerHorizontal="true"
        android:src="@drawable/i"
        android:contentDescription="@string/Smile" />

</RelativeLayout>
